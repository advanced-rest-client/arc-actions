{
  "name": "@advanced-rest-client/arc-actions",
  "description": "Request and response actions UI and logic module.",
  "version": "0.1.0",
  "license": "Apache-2.0",
  "main": "index.js",
  "module": "index.js",
  "keywords": [
    "web-components",
    "advanced-rest-client",
    "request-actions"
  ],
  "authors": [
    "Pawel Psztyc"
  ],
  "contributors": [
    "Your name can be here!"
  ],
  "repository": {
    "type": "git",
    "url": "git://github.com/advanced-rest-client/arc-actions.git"
  },
  "bugs": {
    "url": "https://github.com/advanced-rest-client/arc-actions/issues",
    "email": "arc@mulesoft.com"
  },
  "dependencies": {
    "@advanced-rest-client/arc-icons": "^3.1.2",
    "@advanced-rest-client/arc-models": "^4.1.12",
    "@advanced-rest-client/events-target-mixin": "^3.2.3",
    "@advanced-rest-client/headers-parser-mixin": "^3.2.0",
    "@advanced-rest-client/variables-evaluator": "^4.0.1",
    "@anypoint-web-components/anypoint-button": "^1.1.1",
    "@anypoint-web-components/anypoint-checkbox": "^1.1.3",
    "@anypoint-web-components/anypoint-dropdown-menu": "^0.1.17",
    "@anypoint-web-components/anypoint-input": "^0.2.21",
    "@anypoint-web-components/anypoint-item": "^1.0.8",
    "@anypoint-web-components/anypoint-listbox": "^1.1.4",
    "@anypoint-web-components/anypoint-menu-button": "^0.1.1",
    "@anypoint-web-components/anypoint-switch": "^0.1.4",
    "@anypoint-web-components/anypoint-tabs": "^0.1.12",
    "lit-element": "^2.4.0",
    "lit-html": "^1.3.0"
  },
  "devDependencies": {
    "@advanced-rest-client/arc-demo-helper": "^2.2.0",
    "@advanced-rest-client/testing-karma-sl": "^1.4.2",
    "@babel/core": "^7.11.6",
    "@babel/preset-env": "^7.11.5",
    "@open-wc/eslint-config": "^3.0.0",
    "@open-wc/testing": "^2.5.29",
    "@open-wc/testing-karma": "^4.0.8",
    "@pika/web": "^0.6.1",
    "babel-plugin-minify-mangle-names": "^0.5.0",
    "browserify": "^16.5.2",
    "deepmerge": "^4.2.2",
    "es-dev-server": "^1.57.7",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "fs-extra": "^9.0.1",
    "husky": "^4.3.0",
    "jexl": "^2.3.0",
    "lint-staged": "^10.4.0",
    "sinon": "^9.1.0",
    "typescript": "^4.0.3",
    "typescript-lit-html-plugin": "^0.9.0",
    "uglify-js": "^3.11.1"
  },
  "scripts": {
    "start": "es-dev-server --app-index demo/index.html --node-resolve --open --watch --preserve-symlinks --dedupe",
    "lint:eslint": "eslint --ext .js,.html . --ignore-path .gitignore",
    "format:eslint": "eslint --ext .js,.html . --fix --ignore-path .gitignore",
    "lint:types": "tsc",
    "lint": "npm run lint:eslint",
    "format": "npm run format:eslint",
    "test": "karma start --coverage",
    "test:watch": "karma start --auto-watch=true --single-run=false",
    "test:sl": "karma start karma.sl.config.js --compatibility auto --coverage",
    "prepare": "pika-web && node dev-lib/prepare.js",
    "gen:wc": "wca analyze \"*.js\" --outFile custom-elements.json"
  },
  "@pika/web": {
    "webDependencies": [
      "jexl/dist/Jexl.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "overrides": [
      {
        "files": [
          "**/demo/**/*.js",
          "**/demo/**/*.html",
          "dev-lib/",
          "test/**/*js"
        ],
        "rules": {
          "no-console": "off",
          "no-unused-expressions": "off",
          "class-methods-use-this": "off",
          "import/no-extraneous-dependencies": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix"
    ]
  }
}
